{
    "compilerOptions": {
        "outDir": "dist",
        "incremental": true,
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "noImplicitAny": false,
        "typeRoots": ["src/@types"],
        "paths": {
            "@db/*": ["src/db/*"],
            "@lib/*": ["src/lib/*"]
        }
    },
    "exclude": ["drizzle.config.ts"]
}
